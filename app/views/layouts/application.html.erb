<!DOCTYPE html>
<html>

<head>
    <title><%= full_title(yield(:title)) %></title>
    <meta charset="utf-8">
    <%= render 'layouts/head' %>
    <%= render 'layouts/shim' %>
</head>

<body>
    <%= render 'layouts/header' %>
    
    <% flash.each do |type, message| %>
    <div class = "alert alert-<%= type %>"><%= message %></div>
    <% end %>

    <div class="container">
        <%= yield %>
        <%= render 'layouts/footer' %>
        <%= debug(params) if Rails.env.development? %>
    </div>
</body>